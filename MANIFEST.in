# Include essential files
include LICENSE
include README.md
include CHANGELOG.md
include CONTRIBUTING.md
include requirements.txt
include pyproject.toml

# Include configuration templates
include _pylintrc
include _pre-commit-config.yaml
include _pre-commit-config-local.yaml
include _pre-commit-hooks.yaml
include _solt-hooks.yaml
include _solt-hooks-defaults.yaml
include pyproject-base.toml
